# ============================================================================
# GitHub AI Agent v4.0 Configuration Template - Phase 4
# Copy this to .env and fill in your values
# ============================================================================

# ============================================================================
# LLM Provider Selection
# ============================================================================
# Choose your LLM provider: ollama, groq, openai, or mock
LLM_PROVIDER=mock

# ============================================================================
# API Keys (based on provider choice)
# ============================================================================
# GROQ API Key (if LLM_PROVIDER=groq)
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenAI API Key (if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your_openai_api_key_here

# ============================================================================
# Required Configuration
# ============================================================================
# GitHub Personal Access Token
GITHUB_TOKEN=ghp_your_github_token_here

# Target Repository
REPO_FULL_NAME=your_username/your_repository

# ============================================================================
# Database Configuration - Phase 4
# ============================================================================
# For production with PostgreSQL:
DATABASE_URL=postgresql://github_user:github_password@localhost:5432/github_ai_agent

# For development with SQLite:
# DATABASE_URL=sqlite:///logs.db

# ============================================================================
# Redis Configuration - Phase 4
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Security Configuration - Phase 4
# ============================================================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# ============================================================================
# Web Server Configuration - Phase 4
# ============================================================================
WEB_HOST=0.0.0.0
WEB_PORT=8000

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=development
DEBUG=false
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# ============================================================================
# Monitoring Configuration - Phase 4
# ============================================================================
PROMETHEUS_ENABLED=false
GRAFANA_ADMIN_PASSWORD=admin123

# ============================================================================
# Optional Configuration
# ============================================================================
HUGGINGFACE_TOKEN=hf_your_huggingface_token_here
LOG_LEVEL=INFO
MAX_FILE_SIZE=10485760
MAX_PROMPT_LENGTH=4000
MAX_ISSUE_BODY_LENGTH=2000

# ============================================================================
# Execution Configuration
# ============================================================================
ENABLE_CODE_EXECUTION=true
ENABLE_SHELL_EXECUTION=false
ENABLE_GIT_OPERATIONS=true
CODE_EXECUTION_TIMEOUT=10
SHELL_EXECUTION_TIMEOUT=30

# ============================================================================
# Docker/Deployment Settings - Phase 4
# ============================================================================
MODE=cloud